<!DOCTYPE html>
<html>
  <head>
      <link rel="stylesheet" href="{{resourcesRoot}}/fragments/global.css" type="text/css">
      <link rel="stylesheet" href="{{resourcesRoot}}/new-argument.css" type="text/css">
      <title>Add a new argument - Wikisophia</title>
  </head>
  <body>
    <header>
      {{> header }}
    </header>
    <main>
      {{#if fromSearch}}
        <p>No arguments found to support that conclusion. Contribute one using the form below.</p>
      {{/if}}
      <section id="new-argument-anchor" class="main-content"></section>
    </main>
    {{> react }}
    <script src="{{resourcesRoot}}/new-argument.js"></script>
    <script>
    ReactDOM.render(
      React.createElement(wikisophia.Argument, {
        apiAuthority: '{{apiAuthority}}',
        initialArgument: {
          conclusion: '{{conclusion}}',
          premises: [
            {{#each premises }}
              '{{this}}',
            {{/each}}
          ]
        }
      }),
      document.getElementById("new-argument-anchor"));
    </script>
  </body>
</html>
